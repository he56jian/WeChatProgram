


/* 头部歌曲信息 */
.song-info{
  display: flex;
  padding:10px;
  border-bottom:1px solid #c2c0c0;
}
.song-info .song-img{
  display: block;
  margin-right:10px;
  width:200rpx;
  height:200rpx;
  border-radius: 10px;
}
.song-info-des{
  flex:1;
  overflow: hidden;
}
.song-info .song-info-des text{
  display: block;
  padding:5px;
}
.song-info .song-info-des .song-name{
  font-size:16px;
}
.song-songer{
  font-size:14px;
  color:rgb(168, 167, 167);
}

/* 评论正文 */
.body-view{
  height: calc(100vh - 160px);
  overflow: hidden;
}

.item-head-view{
  display: flex;
  margin:5px;
}
.item-head-view .user-img{
  width:80rpx;
  height:80rpx;
  border-radius: 50%;
  margin-right:10px;
}
.item-head-view .user-des{
  flex:1;
}
.item-head-view .user-des text{
  display: block;
  margin-bottom:5px;
}
.item-head-view .user-des .user-name{
  font-size:14px;
}
.item-head-view .user-des .user-time{
  font-size:12px;
  color:rgb(168, 167, 167);
}
.item-body-view{
  font-size:14px;
  padding-bottom:5px;
  border-bottom:1px solid rgb(168, 167, 167);
}

  /* <!-- 底部评论信息填写 --> */
  .char-form{
    position:fixed;
    right:0;
    left:0;
    bottom:0;
    padding:5px 0 5px 10px;
    background: #fff;
  }
  .char-form button{
    float:right;
    height:30px;
    line-height: 30px;
    font-size:14px;
  }
  .char-form button::after{
    border: none;
  }
  .char-form input{
    box-sizing: border-box;
    height:30px;
    line-height: 30px;
    border-bottom:1px solid #c2c0c0;
  }